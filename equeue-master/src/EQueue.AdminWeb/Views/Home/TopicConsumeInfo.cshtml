@model EQueue.AdminWeb.Models.TopicConsumeViewModel
@{
    ViewBag.Title = "队列消费信息";
}
<div>
    @using (Html.BeginForm("TopicConsumeInfo", "Home", new { }, FormMethod.Post, new { @class = "form-inline", role = "form" }))
    {
        <div class="form-group">
            <label class="sr-only" for="Group"></label>
            @Html.TextBoxFor(m => m.Group, new { @class = "form-control", placeholder = "Group" })
        </div>
        <div class="form-group">
            <label class="sr-only" for="Topic"></label>
            @Html.TextBoxFor(m => m.Topic, new { @class = "form-control", placeholder = "Topic" })
        </div>
        <button type="submit" class="btn btn-default">查询</button>
    }
    <table class="table table-striped">
        <thead>
            <tr>
                <th width="15%" class="vertical-center">
                    ConsumerGroup
                </th>
                <th width="15%" class="vertical-center">
                    Topic
                </th>
                <th width="10%" class="text-center vertical-center">
                    QueueId
                </th>
                <th width="10%" class="text-center vertical-center">
                    QueueMaxOffset
                </th>
                <th width="10%" class="text-center vertical-center">
                    ConsumedOffset
                </th>
                <th width="10%" class="text-center vertical-center">
                    UnConsumedCount
                </th>
                <th width="10%" class="text-center vertical-center">
                    HasActiveConsumer
                </th>
                <th width="20%" class="text-center vertical-center">
                    操作
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TopicConsumeInfos)
            {
                <tr>
                    <td class="vertical-center">
                        @item.ConsumerGroup
                    </td>
                    <td class="vertical-center">
                        @item.Topic
                    </td>
                    <td class="text-center vertical-center">
                        @item.QueueId
                    </td>
                    <td class="text-center vertical-center">
                        @item.QueueMaxOffset
                    </td>
                    <td class="text-center vertical-center">
                        @item.ConsumedOffset
                    </td>
                    <td class="text-center vertical-center">
                        @item.UnConsumedMessageCount
                    </td>
                    <td class="text-center vertical-center">
                        @item.HasConsumer
                    </td>
                    <td class="text-center vertical-center">
                        @Html.ActionLink("删除", "RemoveQueueOffsetInfo", new { consumerGroup = item.ConsumerGroup, topic = item.Topic, queueId = item.QueueId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
